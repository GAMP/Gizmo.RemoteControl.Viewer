<Router AppAssembly="@typeof(App_Wasm).Assembly">
    <NotFound>
        <h1>Sorry</h1>
        <p>Sorry, there's nothing at this address.</p>
    </NotFound>
    <Found Context="routeData">
        <ErrorBoundary>
            <ChildContent>
                <RouteView RouteData="@routeData" DefaultLayout="@typeof(Layouts.Main)" />
            </ChildContent>
            <ErrorContent>
                <h1 style="color:red">@context.Message</h1>
            </ErrorContent>
        </ErrorBoundary>
    </Found>
</Router>